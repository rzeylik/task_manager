<section class="" style="padding-top: 15vh; padding-bottom: 50px">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbootstrap.com/img/Photos/new-templates/bootstrap-login-form/draw2.png" class="img-fluid"
             alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 pt-5">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <!-- Email input -->
          <div class="form-outline mb-4">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Enter email address', class: 'form-control form-control-lg' %>
            <%#= f.label :email, 'Email address', class: 'form-label' %>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Enter password', class: 'form-control form-control-lg' %>
            <%#= f.label :password, 'Password', class: 'form-label' %>
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <!-- Checkbox -->
            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-0">
                <%= f.check_box :remember_me, class: 'form-check-input me-2' %>
                <%= f.label :remember_me, class: 'form-check-label' %>
              </div>
            <% end %>
            <%= link_to 'Forgot password?', new_user_password_path, class: 'text-body' %>
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
            <%= f.submit 'Login', class: 'btn btn-primary btn-lg' %>
            <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <%= link_to 'Register', new_user_registration_path, class: 'link-danger' %></p>
          </div>

        <% end %>
      </div>
    </div>
  </div>
